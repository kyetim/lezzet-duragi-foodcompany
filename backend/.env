# 🔧 Lezzet Durağı Backend Environment Variables

# 🌍 Server Configuration
NODE_ENV=development
PORT=5000

# 📊 MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/lezzet-duragi

# 🔐 JWT Configuration
JWT_SECRET=lezzet-duragi-super-secret-key-2025
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=lezzet-duragi-refresh-secret-key-2025
JWT_REFRESH_EXPIRES_IN=30d

# 🔒 Bcrypt Configuration
BCRYPT_SALT_ROUNDS=12

# 💳 Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_development_webhook_secret

# 📧 Email Configuration
EMAIL_FROM=noreply@lezzetduragi.com
EMAIL_USER=your_email_user_here
EMAIL_PASS=your_email_password_here
SENDGRID_API_KEY=your_sendgrid_api_key_here

# 🖼️ File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# 🔄 API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 🌐 CORS Configuration
FRONTEND_URL=http://localhost:5173
PRODUCTION_FRONTEND_URL=https://lezzet-duragi.vercel.app
